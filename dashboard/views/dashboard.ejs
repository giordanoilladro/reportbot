<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>ReportBot Dashboard</title>
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    /* === STILE LINK ESTERNI === */
    .external-links {
      border-top: 1px solid rgba(255,255,255,0.1);
      padding: 16px 12px 8px;
      margin-top: 12px;
    }
    .external-links h3 {
      font-size: 0.75rem;
      font-weight: 600;
      color: #9ca3af;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: 10px;
    }
    .external-link {
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 8px 12px;
      margin: 4px 0;
      border-radius: 8px;
      color: #b0b0b0;
      text-decoration: none;
      font-size: 0.9rem;
      transition: all 0.2s ease;
    }
    .external-link:hover {
      background: rgba(255,255,255,0.08);
      color: #fff;
      transform: translateX(4px);
    }
    .external-link i {
      width: 16px;
      font-size: 0.85rem;
      color: #5865F2;
    }
    .notification {
      position: fixed;
      bottom: 20px;
      right: 20px;
      padding: 14px 24px;
      background: #10b981;
      color: white;
      font-weight: 600;
      border-radius: 12px;
      box-shadow: 0 8px 32px rgba(16,185,129,0.3);
      transform: translateY(100px);
      opacity: 0;
      transition: all 0.4s ease;
      z-index: 1000;
    }
    .notification.show {
      transform: translateY(0);
      opacity: 1;
    }
    .notification.error {
      background: #ef4444;
      box-shadow: 0 8px 32px rgba(239,68,68,0.3);
    }
  </style>
</head>
<body>
  <!-- SIDEBAR -->
  <div class="sidebar">
    <div class="user-info">
      <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.webp?size=64" alt="Avatar" class="avatar">
      <div>
        <div class="username"><%= user.username %></div>
        <a href="/logout" class="logout">Logout</a>
      </div>
    </div>

    <div class="server-list">
      <% guilds.forEach(g => { %>
        <a href="/guild/<%= g.id %>" class="server-item <%= selectedGuild?.id === g.id ? 'active' : '' %>">
          <% if (g.icon) { %>
            <img src="https://cdn.discordapp.com/icons/<%= g.id %>/<%= g.icon %>.webp?size=32" class="server-icon">
          <% } else { %>
            <div class="server-icon"><%= g.name.charAt(0) %></div>
          <% } %>
          <span class="server-name"><%= g.name %></span>
        </a>
      <% }) %>
    </div>

    <!-- LINK PAGINE ESTERNE -->
    <div class="external-links">
      <h3>Pagine</h3>
      <a href="/home" class="external-link">
        <i class="fas fa-home"></i> Home
      </a>
      <a href="/termini" class="external-link">
        <i class="fas fa-book"></i> Termini
      </a>
      <a href="/privacy" class="external-link">
        <i class="fas fa-shield-alt"></i> Privacy
      </a>
      <a href="/collabora" class="external-link">
        <i class="fas fa-handshake"></i> Collabora
      </a>
    </div>
  </div>

  <!-- MAIN CONTENT -->
  <div class="main-content">
    <% if (!selectedGuild) { %>
      <div class="header">
        <h1>ReportBot Dashboard</h1>
        <p>Seleziona un server dalla sidebar per configurarlo.</p>
      </div>
    <% } else { %>
      <div class="card">
        <div class="guild-header">
          <% if (selectedGuild.icon) { %>
            <img src="https://cdn.discordapp.com/icons/<%= selectedGuild.id %>/<%= selectedGuild.icon %>.webp?size=80" class="guild-icon-large">
          <% } else { %>
            <div class="guild-icon-large"><%= selectedGuild.name.charAt(0) %></div>
          <% } %>
          <div class="guild-info">
            <h2><%= selectedGuild.name %></h2>
            <p>ID: <%= selectedGuild.id %></p>
          </div>
        </div>

        <form id="configForm">
          <input type="hidden" name="guildId" value="<%= selectedGuild.id %>">

          <div class="tabs">
            <button type="button" onclick="openTab('general')" class="tab-btn active">Generale</button>
            <button type="button" onclick="openTab('verify')" class="tab-btn">Verifica</button>
            <button type="button" onclick="openTab('report')" class="tab-btn">Report</button>
          </div>

          <!-- TAB GENERALE -->
          <div id="general" class="tab-content">
            <div class="grid-2">
              <div class="form-group">
                <label>Canale Log</label>
                <input type="text" name="logChannelId" value="<%= settings.logChannelId || '' %>" placeholder="123456789">
              </div>
              <div class="form-group">
                <label>Ruolo Mute</label>
                <input type="text" name="setup.muteRoleId" value="<%= settings.setup?.muteRoleId || '' %>" placeholder="987654321">
              </div>
            </div>
          </div>

          <!-- TAB VERIFICA -->
          <div id="verify" class="tab-content" style="display:none">
            <div class="form-group">
              <label>
                <input type="checkbox" name="verify.enabled" <%= settings.verify?.enabled ? 'checked' : '' %>>
                Abilita sistema di verifica
              </label>
            </div>
          </div>

          <!-- TAB REPORT -->
          <div id="report" class="tab-content" style="display:none">
            <div class="form-group">
              <label>Canale Report</label>
              <input type="text" name="report.channelId" value="<%= settings.report?.channelId || '' %>" placeholder="111222333">
            </div>
            <div class="form-group">
              <label>
                <input type="checkbox" name="report.requireReason" <%= settings.report?.requireReason ? 'checked' : '' %>>
                Richiedi motivo nel report
              </label>
            </div>
          </div>

          <div class="mt-4">
            <button type="submit" class="btn btn-primary">Salva Configurazione</button>
            <button type="button" onclick="location.reload()" class="btn btn-secondary">Annulla</button>
          </div>
        </form>
      </div>
    <% } %>
  </div>

  <!-- SCRIPT -->
  <script>
    function openTab(tab) {
      document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
      document.querySelectorAll('.tab-content').forEach(c => c.style.display = 'none');
      document.querySelector(`[onclick="openTab('${tab}')"]`).classList.add('active');
      document.getElementById(tab).style.display = 'block';
    }

    document.getElementById('configForm')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const form = new FormData(e.target);
      const data = {};
      for (const [key, value] of form.entries()) {
        if (value !== '' && value !== 'on') continue;
        const keys = key.split('.');
        let obj = data;
        for (let i = 0; i < keys.length - 1; i++) {
          if (!obj[keys[i]]) obj[keys[i]] = {};
          obj = obj[keys[i]];
        }
        obj[keys[keys.length - 1]] = value === 'on' ? true : value;
      }
      const res = await fetch(`/guild/${form.get('guildId')}/save`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });
      const result = await res.json();
      showNotification(result.success ? 'Salvato con successo!' : 'Errore: ' + result.error, !result.success);
    });

    function showNotification(msg, error = false) {
      const n = document.createElement('div');
      n.className = `notification ${error ? 'error' : ''}`;
      n.textContent = msg;
      document.body.appendChild(n);
      setTimeout(() => n.classList.add('show'), 10);
      setTimeout(() => {
        n.classList.remove('show');
        setTimeout(() => n.remove(), 400);
      }, 3000);
    }
  </script>
</body>
</html>